<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateDate">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_createDate"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Termin Erstellen"/>
        <TextView
            android:id="@+id/text_view_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Termin"/>
        <EditText
            android:id="@+id/edit_text_dateTitle"
            android:layout_width="120dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/edit_text_datePicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:clickable="true"
            android:inputType="date"
            android:hint="DD/MM/YYYY"
            android:focusable="false"/>
        <EditText
            android:id="@+id/edit_text_dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00"
            android:inputType="time"
            android:focusable="false"/>
        <Button
            android:id="@+id/btn_firebase"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Erstellen"/>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>